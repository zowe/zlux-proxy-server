{
  "compileOnSave": true,
  "include": [
    "lib/*.ts"
  ],
  "exclude": ["lib/*.js"],
  "compilerOptions": {
    "outDir": "./lib",
    "sourceMap": true,
    "moduleResolution": "node",
    "target": "es5",
    "downlevelIteration": true,
    "types": [
      "node",
      "express"
    ],
    "lib": ["es5", "es6"]
  }
}
